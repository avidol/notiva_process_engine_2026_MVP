{
  "Application": {
    "Name": "Notiva Notification Worker",
    "Environment": "Development",
    "InstanceId": "LOCAL-DEV-01"
  },

  "Worker": {
    "PollIntervalSeconds": 5,
    "MaxBatchSize": 50,
    "ShutdownTimeoutSeconds": 30,
    "MaxParallelism": 5
  },

  "ConnectionStrings": {
    "MySql": "Server=localhost;Port=3306;Database=notiva_process_engine_db;User=root;Password=root;SslMode=Disabled;"
  },

  "RetryPolicy": {
    "MaxRetryCount": 5,
    "InitialDelaySeconds": 5,
    "BackoffStrategy": "Exponential"
  },

  "FileChannel": {
    "Enabled": true,
    "OutputDirectory": "E:/Globsyn/notiva/output",
    "FileNamePattern": "{NotificationId}.txt",
    "OverwriteExisting": false
  },

  "SftpIngestion": {
    "Enabled": true,
    "Host": "localhost",
    "Port": 22,
    "Username": "sftpuser",
    "Password": "sftppassword",
    "InputDirectory": "/inbound",
    "ArchiveDirectory": "/archive",
    "ScanIntervalSeconds": 5
  },

  "RabbitMqIngestion": {
    "Enabled": true,
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "QueueName": "notiva.in.q",
    "PrefetchCount": 10
  },

  "FileIngestion": {
    "Enabled": true,
    "InputDirectory": "E:/Globsyn/notiva/sftp-in",
    "ArchiveDirectory": "E:/Globsyn/notiva/sftp-archive",
    "ScanIntervalSeconds": 5
  },

  "FileOutput": {
    "Enabled": true,
    "Directory": "output"
  },
  "XmlConversion": {
    "Enabled": true,
    "XsdPath": "schemas/payload.xsd"
  },
  "ProcessingSteps": {
    "XmlConversion": {
      "Enabled": true,
      "RootElement": "Message",
      "XsdPath": "schemas/message.xsd",
      "Validate": true
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
